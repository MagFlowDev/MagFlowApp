@using Syncfusion.Blazor.Buttons

<div style="min-width: 300px; flex: 0 0 calc(33.333% - 20px); margin: 10px; padding: 24px 24px 16px 24px; gap: 16px; border-radius: 6px; background: #FFF; box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.08);" class="d-md-flex flex-column align-items-start">
    <div class="d-md-flex align-items-start align-self-stretch flex-shrink-0" style="gap: 16px;">
        <div class="d-flex justify-content-center align-items-center" style="width: 48px; height: 48px; border-radius: 8px; background: @ModuleColor">
            <SfIcon IconCss="@ModuleIcon" style="color: #FFFFFF; font-size: 24px"></SfIcon>
        </div>
        <div class="d-flex flex-column align-items-start" style="height: 48px; flex: 1 0 0; gap: 8px;">
            <h5>@ModuleTitle</h5>
        </div>
    </div>
    <div class="d-md-flex flex-column align-items-start flex-shrink-0 align-self-stretch" style="padding-top: 8px; gap:12px;">Analytics & Intelligence
        <div class="d-flex justify-content-center align-items-center align-self-stretch flex-shrink-0">
            <p style="font-size: 14px; line-height: 21px; letter-spacing: -0.15px; color: #495057">@ModuleDescription</p>
        </div>
        <div class="d-flex justify-content-between align-items-center flex-shrink-0 align-self-stretch">
            <div class="d-flex justify-content-center align-items-center text-center" style="padding: 6px 10px; font-weight: 700; font-size: 12px; line-height: 12px; border-radius: 6px; border: 1px solid #DEE2E6; background: #F8F9FA">
                @ModuleMetric
            </div>
            <div class="d-flex justify-content-center align-items-center" style="padding: 0 8px; gap: 8px;">
                <SfButton CssClass="e-link" IconCss="e-icons e-arrow-right" IconPosition="IconPosition.Right">Learn more</SfButton>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string ModuleIcon { get; set; }

    [Parameter, EditorRequired]
    public string ModuleColor { get; set; }

    [Parameter, EditorRequired]
    public string ModuleTitle { get; set; }

    [Parameter, EditorRequired]
    public string ModuleDescription { get; set; }

    [Parameter, EditorRequired]
    public string ModuleMetric { get; set; }
}