@using Syncfusion.Blazor.Buttons

<div class="hero-container d-md-flex flex-column align-items-center align-self-stretch">
    <div class="d-md-flex flex-column justify-content-center align-self-center" style="padding: 4px 0 1.602px 0; gap: 16px;">
        <div class="d-flex align-items-center justify-content-center">
            <span class="e-badge e-badge-primary align-items-center d-flex" style="background: #CFE2FF; color: #0D6EFD; padding: 0 8px; border-radius: 12px">Product Features</span>
        </div>
        <div class="d-flex align-items-center justify-content-center">
            <h2 class="d-flex align-items-start text-center" style="font-size: 32px; font-weight: 700; line-height: 38px; letter-spacing: 0.4px; color: #212529">Complete Manufacturing Suite</h2>
        </div>
        <div class="d-flex align-items-center justify-content-center" style="max-width: 650px;">
            <p class="text-center" style="padding: 0 13.5px 0 14.5px; font-size: 16px; line-height: 24px; letter-spacing: -0.312px; color: #495057">Six integrated modules that work together to optimize every aspect of your manufacturing operations.</p>
        </div>
    </div>
    <div class="d-md-flex justify-content-center align-items-center flex-wrap w-100" style="max-width: 1140px;">
        <ModuleTile ModuleIcon="e-icons e-group-icon" ModuleColor="#0D6EFD" ModuleTitle="Production Planning & Control" ModuleDescription="Smart algorithms optimize your production flow, reducing bottlenecks by 35% and improving on-time delivery" ModuleMetric="35% faster" />
        <ModuleTile ModuleIcon="e-icons e-chart" ModuleColor="#D63384" ModuleTitle="Analytics & Intelligence" ModuleDescription="Transform raw data into actionable insights with predictive analytics and automated reporting dashboards" ModuleMetric="99.5% accuracy" />
        <ModuleTile ModuleIcon="bi bi-shield" ModuleColor="#20C997" ModuleTitle="Quality Assurance" ModuleDescription="Ensure product excellence with integrated QC workflows, automatic defect detection, and audit trails" ModuleMetric="Zero defects" />
        <ModuleTile ModuleIcon="e-icons e-search" ModuleColor="#FFC107" ModuleTitle="Equipment Monitoring" ModuleDescription="IoT-enabled monitoring prevents unplanned downtime with predictive maintenance alerts" ModuleMetric="30% less downtime" />
        <ModuleTile ModuleIcon="bi bi-people" ModuleColor="#6F42C1" ModuleTitle="Workforce Management" ModuleDescription="Digital workforce optimization with skill tracking, training management, and performance analytics" ModuleMetric="25% productivity gain" />
        <ModuleTile ModuleIcon="e-icons e-table-merge" ModuleColor="#0DCAF0" ModuleTitle="Performance Analytics" ModuleDescription="Comprehensive KPI monitoring with benchmarking and improvement recommendations" ModuleMetric="15% OEE improvement" />
    </div>
</div>

