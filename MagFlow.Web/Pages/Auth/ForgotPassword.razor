@page "/ForgotPassword"
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@layout EmptyLayout


@inject ILogger<Login> Logger
@inject NavigationManager NavigationManager

<PageTitle>@Localizer[Langs.ForgotPassword]</PageTitle>

<AuthorizeView>
    <NotAuthorized>
        <ForgotPasswordForm/>
    </NotAuthorized>
    <Authorized>
        <div style="margin: 0 auto; min-height: 100vh; min-width: 100%" class="flex-grow-1 d-flex flex-column">
            <nav class="control-container">
                <div style="width: 100%;">
                    <MudAppBar Color="Color.Inherit" Class="lp-appbar w-100" Style="position: relative; margin: 0 auto;">
                        <a href="/" style="display:inline-flex;align-items:center;gap:16px" class="d-flex align-items-center">
                            <div style="width:40px;height:40px;background:#0D6EFD;border-radius:6px; display:flex;align-items:center;justify-content:center">
                                <span style="color:white;font-size:20px;font-weight:700">M</span>
                            </div>
                            <span style="font-size:28px;font-weight:700;color:#212529">
                                MagFlow
                            </span>
                        </a>

                        <MudSpacer />
                    </MudAppBar>
                </div>
            </nav>
            <div style="width: 100%; height: 100%;" class="flex-grow-1 d-flex align-items-center justify-content-center">
                <div class="d-flex flex-column">
                    <div class="d-flex" style="font-weight: 700; font-size: 32px;">
                        <i class="bi bi-person"></i> @Localizer[Langs.UserAlreadyLogged]
                    </div>
                    <a href="/" style='@string.Concat("background-color: ", Themes.MAIN.PaletteLight.Primary, "; color: white; margin: 0 auto; border-radius: 6px; padding: 6px 16px; text-decoration: none")' class="w-100 d-flex justify-content-center align-items-center">
                        <span style="margin: 0 auto; font-size: .875rem; font-weight: 500; color: white; padding: 0;">@Localizer[Langs.Open]</span>
                    </a>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var authenticationState = await AuthenticationStateTask;

            if (authenticationState?.User?.Identity is not null && authenticationState.User.Identity.IsAuthenticated)
            {
                NavigationManager.NavigateTo("/", replace: true);
            }
        }
    }
}
