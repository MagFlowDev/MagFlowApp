@using MagFlow.Web.Pages.Layouts.Partial
@using MagFlow.Web.Pages.Shared
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider Theme="Themes.MAIN"/>
<MudPopoverProvider />

<MudDialogProvider />

<MudSnackbarProvider />

<AuthorizeView>
    <Authorized>
        <div class="page">
            <ErrorBoundary>
                <ChildContent>
                    <div class="sidebar">
                        <NavMenu />
                    </div>

                    <main class="content">
                        <article class="content">
                            @Body
                        </article>
                    </main>
                </ChildContent>
                <ErrorContent Context="exception">
                    <ErrorPage Exception="exception" />
                </ErrorContent>
            </ErrorBoundary>
        </div>
        <footer>
            <Footer />
        </footer>
    </Authorized>
    <NotAuthorized Context="authState">
        @if (authState.User.Identity?.IsAuthenticated == true)
        {
            <RedirectToDenied/>
        }
        else
        {
            <RedirectToLP/>
        }
    </NotAuthorized>
</AuthorizeView>