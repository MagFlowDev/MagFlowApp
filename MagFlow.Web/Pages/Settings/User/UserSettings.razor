@page "/user/settings"
@using MudBlazor
@inject IJSRuntime JS

<div class="d-flex flex-column w-100 flex-grow-1 px-4 pt-2" style="min-height: 0">
    <div class="text-start d-flex align-items-start flex-column flex-shrink-0">
        <MudButton Variant="Variant.Text" StartIcon="@Icons.Material.Filled.West" OnClick="@(async () => await JS.InvokeVoidAsync("history.back"))">@Localizer[Langs.GoBack]</MudButton>
    </div>
    <div class="d-flex w-100 mt-6" style="gap: 16px; flex: 1 1 0; min-height: 0">
        <div class="d-flex flex-column justify-content-start align-items-start" style="min-width: 300px; flex: 0 0 auto; gap: 24px;">
            <MudText Typo="Typo.h5" Style="font-weight: 700;">@Localizer[Langs.Settings]</MudText>
            <MudNavMenu Style="background: #F8F9FA !important;">
                <MudNavLink Icon="@Icons.Material.Outlined.Person" Style="background: #F8F9FA;">Informacje o koncie</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Outlined.Lock">Hasło</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Outlined.Place">Regionalne</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Outlined.Language">Język</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Outlined.ColorLens">Motyw</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Outlined.Notifications">Powiadomienia</MudNavLink>
            </MudNavMenu>
        </div>
        <div class="flex-grow-1 d-flex flex-column align-items-start" style="min-height: 0; overflow-x: hidden; gap: 40px;">

        </div>
    </div>
</div>

